<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HotLabelView">
        <!-- 设置文字内容 -->
        <attr name="hlv_text" format="string"/>
        <!-- 设置文字颜色,默认#ffffff -->
        <attr name="hlv_textColor" format="color"/>
        <!-- 设置文字大小,默认11sp -->
        <attr name="hlv_textSize" format="dimension"/>
        <!-- 设置文字是否支持加粗,默认true -->
        <attr name="hlv_textBold" format="boolean"/>
        <!-- 设置文字是否支持全部大写,默认true-->
        <attr name="hlv_textAllCaps" format="boolean"/>
        <!-- 设置背景颜色,默认"#FF4081"-->
        <attr name="hlv_bgColor" format="color"/>
        <!-- 设置HotLabelView所在矩形最小宽高,默认mFillTriangle?35dp:50dp-->
        <attr name="hlv_minSize" format="dimension"/>
        <!-- 设置文字上下padding,默认3.5dp,mFillTriangle为true时无效-->
        <attr name="hlv_padding" format="dimension"/>
        <!-- 设置HotLabelView方向 -->
        <attr name="hlv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51"/>
            <enum name="TOP_RIGHT" value="53"/>
            <enum name="BOTTOM_LEFT" value="83"/>
            <enum name="BOTTOM_RIGHT" value="85"/>
        </attr>
        <!-- 设置是否填充三角区域,默认false -->
        <attr name="hlv_fillTriangle" format="boolean"/>
        <!-- 设置是否浮嵌显示大小 -->
        <attr name="hlv_fillSize" format="integer"/>
    </declare-styleable>
</resources>
